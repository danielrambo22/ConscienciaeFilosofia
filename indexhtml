  <script>
    const postForm = document.getElementById('postForm');
    const postsContainer = document.getElementById('postsContainer');
    const noPostsMessage = document.getElementById('noPostsMessage');
    const passwordInput = document.getElementById('passwordInput');
    const deletePasswordInput = document.getElementById('deletePasswordInput');
    const enableCommentingBtn = document.getElementById('enableCommentingBtn');
    const enableDeleteBtn = document.getElementById('enableDeleteBtn');
    const password = 'Olavinho@1';  // Senha definida

    // Fun√ß√£o para habilitar coment√°rios
    function enableCommenting() {
      const enteredPassword = passwordInput.value;
      if (enteredPassword === password) {
        enableCommentingBtn.innerText = 'Coment√°rios Liberados!';
        enableCommentingBtn.disabled = true;
        passwordInput.disabled = true;
        postForm.style.display = 'block'; // Mostrar formul√°rio de postagens
      } else {
        alert('Senha incorreta! Tente novamente.');
      }
    }

    // Fun√ß√£o para habilitar exclus√£o de posts
    function enableDelete() {
      const enteredPassword = deletePasswordInput.value;
      if (enteredPassword === password) {
        enableDeleteBtn.innerText = 'Exclus√£o Liberada!';
        enableDeleteBtn.disabled = true;
        deletePasswordInput.disabled = true;
      } else {
        alert('Senha incorreta! Tente novamente.');
      }
    }

    // Exibir posts armazenados no localStorage
    function displayPosts() {
      const posts = JSON.parse(localStorage.getItem('posts')) || [];
      postsContainer.innerHTML = '<h2>Reflex√µes Publicadas</h2>';

      if (posts.length === 0) {
        postsContainer.innerHTML += '<p id="noPostsMessage">Nenhuma reflex√£o publicada ainda. Seja o primeiro!</p>';
        return;
      }

      const categories = ["Filosofia", "Reflex√µes", "Desabafo"];
      categories.forEach((category) => {
        const categoryPosts = posts.filter(post => post.category === category);
        if (categoryPosts.length > 0) {
          postsContainer.innerHTML += ` 
            <div class="category">
              <h3>${category}</h3>
              ${categoryPosts.map(post => `
                <div class="post">
                  <h3>${post.title}</h3>
                  <p><em>${post.date}</em></p>
                  <p>${post.content}</p>
                  <button class="delete-btn" onclick="deletePost('${post.title}')">‚ùå</button>
                </div>
              `).join('')}
            </div>
          `;
        }
      });
    }

    // Fun√ß√£o para excluir post
    function deletePost(title) {
      if (deletePasswordInput.value === password) {
        const posts = JSON.parse(localStorage.getItem('posts')) || [];
        const updatedPosts = posts.filter(post => post.title !== title);
        localStorage.setItem('posts', JSON.stringify(updatedPosts));
        displayPosts(); // Atualizar a exibi√ß√£o dos posts
      } else {
        alert('Senha incorreta! N√£o foi poss√≠vel deletar.');
      }
    }

    // Ao enviar o formul√°rio, salvar o post no localStorage
    postForm.addEventListener('submit', function (event) {
      event.preventDefault();

      const newPost = {
        title: document.getElementById('title').value,
        content: document.getElementById('content').value,
        category: document.getElementById('category').value,
        date: new Date().toLocaleString()
      };

      const posts = JSON.parse(localStorage.getItem('posts')) || [];
      posts.push(newPost);
      localStorage.setItem('posts', JSON.stringify(posts));

      displayPosts(); // Atualizar a exibi√ß√£o dos posts
      postForm.reset(); // Limpar o formul√°rio
    });

    // Exibir os posts ao carregar a p√°gina
    displayPosts();
  </script>

