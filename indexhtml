    <button id="enableCommentingBtn" onclick="enableCommenting()">Liberar Coment√°rios</button>
  </div>

  <!-- Campo de senha para deletar posts -->
  <div class="password-container">
    <input id="deletePasswordInput" type="password" class="password-input" placeholder="Digite a senha para deletar post" />
    <button id="enableDeleteBtn" onclick="enableDelete()">Liberar Exclus√£o</button>
  </div>

  <!-- Conte√∫do principal -->
